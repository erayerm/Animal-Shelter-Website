@model Hayvan_Barinagi.Models.Hayvan

@{
    ViewData["Title"] = "Create";
}
<br />
<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @*
            enctype="multipart/form-data" önemli!!
        *@
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DogumYili" class="control-label"></label>
                <input asp-for="DogumYili" class="form-control" />
                <span asp-validation-for="DogumYili" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotograf" class="control-label"></label>
                <input type="file" class="form-control" name="files" />
                <span asp-validation-for="Fotograf" class="text-danger"></span>
            </div>
            <div class="form-group">
                TurAd
                <select asp-for="TurID" class="form-control" asp-items="ViewBag.TurID"></select>
            </div>
            <div class="form-group">
                CinsAd
                <select asp-for="CinsID" class="form-control" asp-items="ViewBag.CinsID"></select>
            </div>
            <div class="form-group">
                CinsiyetAd
                <select asp-for="CinsiyetID" class="form-control" asp-items="ViewBag.CinsiyetID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
